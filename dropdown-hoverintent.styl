

#global-engage-header .dropdown.hoverIntent {

  &:hover .dropdown-menu{
    display:block;
    border-radius: 0;
    padding: 0;
  }

  /** needed so mouseout isn't fired while mousing down to get to the dropdown. **/
  .mover-shim {
    position: absolute;
    width: 100%;
    height: 10px;
  }

  .dropdown-menu {
    margin-top: 8px;

    &:before{
      /** Makes the little caret border **/
      position: absolute;
      top: -10px;
      left: 14px;
      display: inline-block;
      border-right: 10px solid transparent;
      border-bottom: 10px solid #ccc;
      border-left: 10px solid transparent;
      border-bottom-color: rgba(0, 0, 0, 0.2);
      content: '';
    }

    &:after {
      /** Makes the caret fill **/
      position: absolute;
      top: -9px;
      left: 15px;
      display: inline-block;
      border-right: 9px solid transparent;
      border-bottom: 9px solid #ffffff;
      border-left: 9px solid transparent;
      content: '';
    }

    li { 
      /** Most of this is just overriding the default behavior for our `nav li a` **/
      float: none;
      margin: 0;

      a {
        transition: none;
        -webkit-transition: none;
        padding: 8px 20px;
        font-size: 15px;

        &:hover {
          background-color: #f2f2f2;
          background-image: none;
          color: #4D4E4E;
          transition: none;
          -webkit-transition: none;
        }
      }
    }
  }
}
